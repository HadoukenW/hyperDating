---

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title, description, ogImage, keywords } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} ogImage={ogImage} keywords={keywords}/>
	</head>

	<body>
		<div class="components__wrapper">
			<Header />
			<main>
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>

<style lang="scss">
	.components__wrapper {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		position: relative;
		&::after {
			content: "";
			position: absolute;
			inset: 0;
			background-image: radial-gradient(circle farthest-side at var(--x, 100px) var(--y, 100px), #c03db7 0, transparent 60%);
			opacity: .4;
			background-blend-mode: multiply;
		}
	}

	main {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
</style>